{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ASW E-Phyto Normal Status Schema (851) - Comprehensive Validation Version",
  "type": "object",
  "properties": {
    "xc_document": {
      "type": ["object", "null"],
      "properties": {
        "doc_name": { "type": ["string", "null"] },
        "doc_id": { "type": ["string", "integer", "null"] },
        "doc_description": { "type": ["string", "null"] },
        "doc_type": { "type": ["string", "integer"], "enum": ["851", 851] },
        "status_code": { "type": ["string", "integer"], "enum": ["70", 70] },
        "issue_date": { "type": ["string", "null"] },
        "issue_party_id": { "type": ["string", "integer", "null"] },
        "issue_party_name": { "type": ["string", "null"] },
        "include_notes": {
          "type": ["array", "null"],
          "minItems": 1,
          "items": {
            "type": "object",
            "properties": {
              "subject": { "type": ["string", "null"] },
              "contents": {
                "type": ["array", "null"],
                "minItems": 1,
                "items": {
                  "type": "object",
                  "properties": { "content": { "type": ["string", "integer", "null"] } },
                  "required": ["content"]
                }
              }
            },
            "required": ["subject", "contents"],
            "allOf": [
              {
                "if": { "properties": { "subject": { "enum": ["SPSFL", "DMCL"] } } },
                "then": { "properties": { "contents": { "maxItems": 1 } } }
              }
            ]
          }
        },
        "reference_docs": {
          "type": ["array", "null"],
          "items": {
            "type": "object",
            "properties": {
              "relation_type_code": { "type": ["string", "null"] },
              "doc_id": { "type": ["string", "integer", "null"] },
              "PdfObject": { 
                "type": ["string", "null"],
                "contentEncoding": "base64",
                "contentMediaType": "application/pdf"
              },
              "filename": { "type": ["string", "null"] }
            },
            "required": ["relation_type_code", "doc_id", "PdfObject", "filename"]
          }
        },
        "signatory_authen": {
          "type": ["object", "null"],
          "properties": {
            "actual_datetime": { "type": ["string", "null"] },
            "issue_location": {
              "type": ["object", "string", "null"],
              "properties": { "name": { "type": ["string", "null"] } },
              "required": ["name"]
            },
            "provider_party": {
              "type": ["object", "null"],
              "properties": {
                "name": { "type": ["string", "null"] },
                "specfied_person": {
                  "type": ["object", "null"],
                  "properties": {
                    "name": { "type": ["string", "null"] },
                    "attained_qualification": {
                      "type": ["object", "null"],
                      "properties": { "name": { "type": ["string", "null"] } },
                      "required": ["name"]
                    }
                  },
                  "required": ["name"]
                }
              },
              "required": ["name"]
            },
            "include_clauses": {
              "type": ["array", "null"],
              "items": {
                "type": "object",
                "properties": { "id": { "type": ["string", "integer", "null"] }, "content": { "type": ["string", "null"] } },
                "required": ["id", "content"]
              }
            }
          },
          "required": ["actual_datetime", "issue_location", "provider_party", "include_clauses"]
        }
      },
      "required": ["doc_name", "doc_id", "doc_type", "status_code", "issue_date", "issue_party_name", "include_notes", "signatory_authen"]
    },
    "consignment": {
      "type": ["object", "null"],
      "properties": {
        "consignor_party": {
          "type": ["object", "null"],
          "properties": { "name": { "type": ["string", "null"] }, "adress_line1": { "type": ["string", "null"] } },
          "required": ["name", "adress_line1"]
        },
        "consignee_party": {
          "type": ["object", "null"],
          "properties": { "name": { "type": ["string", "null"] }, "adress_line1": { "type": ["string", "null"] } },
          "required": ["name", "adress_line1"]
        },
        "export_country": {
          "type": ["object", "null"],
          "properties": {
            "id": { "type": ["string", "null"] },
            "name": { "type": ["string", "null"] },
            "subordinary": {
              "type": ["object", "null"],
              "properties": { "name": { "type": ["string", "null"] }, "hierachi_level": { "type": ["string", "integer", "null"] } },
              "required": ["name", "hierachi_level"]
            }
          },
          "required": ["id", "name"]
        },
        "import_country": {
          "type": ["object", "null"],
          "properties": { "id": { "type": ["string", "null"] }, "name": { "type": ["string", "null"] } },
          "required": ["id", "name"]
        },
        "examination_event": {
          "type": ["object", "null"],
          "properties": { "occur_location_name": { "type": ["string", "null"] } },
          "required": ["occur_location_name"]
        }
      },
      "required": ["consignor_party", "consignee_party", "export_country", "import_country", "examination_event"]
    },
    "items": {
      "type": ["array", "null"],
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "descriptions": {
            "type": ["array", "null"],
            "minItems": 1,
            "items": { "type": "object", "properties": { "name": { "type": ["string", "null"] } }, "required": ["name"] }
          },
          "intend_uses": {
            "type": ["array", "null"],
            "minItems": 1,
            "items": { "type": "object", "properties": { "name": { "type": ["string", "null"] } }, "required": ["name"] }
          },
          "net_weight": {
            "type": ["object", "null"],
            "properties": { "weight": { "type": ["string", "number", "null"] }, "unit_code": { "type": ["string", "null"] } },
            "required": ["weight", "unit_code"]
          },
          "gross_weight": {
            "type": ["object", "null"],
            "properties": { "weight": { "type": ["string", "number", "null"] }, "unit_code": { "type": ["string", "null"] } },
            "required": ["weight", "unit_code"]
          },
          "net_volume": {
            "type": ["object", "null"],
            "properties": { "volume": { "type": ["string", "number", "null"] }, "unit_code": { "type": ["string", "null"] } },
            "required": ["volume", "unit_code"]
          },
          "gross_volume": {
            "type": ["object", "null"],
            "properties": { "volume": { "type": ["string", "number", "null"] }, "unit_code": { "type": ["string", "null"] } },
            "required": ["volume", "unit_code"]
          },
          "additional_notes": {
            "type": ["array", "null"],
            "items": {
              "type": "object",
              "properties": {
                "subject": { "type": ["string", "null"] },
                "contents": { "type": ["array", "null"], "minItems": 1 }
              },
              "required": ["subject", "contents"],
              "allOf": [
                {
                  "if": { "properties": { "subject": { "enum": ["OPTND", "OQV", "OQU", "ADIPTLIL", "ADDITLIL"] } } },
                  "then": { "properties": { "contents": { "maxItems": 1 } } }
                }
              ]
            }
          },
          "applicable_classifications": {
            "type": ["array", "null"],
            "items": {
              "type": "object",
              "properties": {
                "system_name": { "type": ["string", "null"] },
                "class_code": { "type": ["string", "integer", "null"] },
                "class_names": {
                  "type": ["array", "null"],
                  "minItems": 1,
                  "items": { "type": "object", "properties": { "class_name": { "type": ["string", "null"] } }, "required": ["class_name"] }
                }
              },
              "required": ["system_name", "class_code", "class_names"],
              "allOf": [
                {
                  "if": { "properties": { "system_name": { "const": "HS" } } },
                  "then": { "properties": { "class_names": { "maxItems": 1 } } }
                }
              ]
            }
          },
          "physical_packages": {
            "type": ["array", "null"],
            "items": {
              "type": "object",
              "properties": {
                "level_code": { "type": ["string", "integer", "null"] },
                "type_code": { "type": ["string", "integer", "null"] },
                "quantity": { "type": ["string", "integer", "null"] },
                "shipping_marks": { "type": ["array", "null"] }
              },
              "required": ["level_code", "type_code", "quantity"]
            }
          },
          "origin_countries": {
            "type": ["array", "null"],
            "items": {
              "type": "object",
              "properties": {
                "id": { "type": ["string", "null"] },
                "name": { "type": ["string", "null"] },
                "subordinary_country": {
                  "type": ["object", "null"],
                  "properties": {
                    "subdivision_name": { "type": ["string", "null"] },
                    "hierachi_level": { "type": ["string", "integer", "null"] },
                    "activity_authorize": {
                        "type": ["object", "null"],
                        "properties": { "party_name": { "type": ["string", "null"] } },
                        "required": ["party_name"]
                    }
                  },
                  "required": ["subdivision_name", "hierachi_level"]
                }
              },
              "required": ["id", "name"]
            }
          },
          "origin_location": {
            "type": ["object", "null"],
            "properties": { "name": { "type": ["string", "null"] } },
            "required": ["name"]
          },
          "applied_processes": {
            "type": ["array", "null"],
            "items": {
              "type": "object",
              "properties": {
                "type_code": { "type": ["string", "integer", "null"] },
                "complete_period": {
                  "type": ["object", "null"],
                  "properties": { "start_date": { "type": ["string", "null"] } },
                  "required": ["start_date"]
                },
                "duration_measuer_unit": { "type": ["string", "null"] },
                "characteristics": {
                  "type": ["array", "null"],
                  "items": {
                    "type": "object",
                    "anyOf": [
                      { "properties": { "desc_1": { "type": ["string", "null"] }, "deec_2": { "type": ["string", "array", "null"] } }, "required": ["desc_1", "deec_2"] }
                    ]
                  }
                }
              },
              "required": ["type_code", "duration_measuer_unit"]
            }
          }
        },
        "required": ["descriptions", "intend_uses"]
      }
    }
  },
  "required": ["xc_document", "consignment", "items"]
}
