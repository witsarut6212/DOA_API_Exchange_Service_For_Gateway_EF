{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "xc_document": {
      "type": "object",
      "properties": {
        "doc_name": { "type": ["string", "null"] },
        "doc_id": { "type": "string" },
        "doc_type": { "type": ["string", "integer"] },
        "status_code": { "type": ["string", "integer"] },
        "issue_date": { "type": "string" },
        "issue_party_name": { "type": "string" },
        "include_notes": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "subject": { "type": "string" },
              "contents": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "content": { "type": "string" }
                  }
                }
              }
            }
          }
        },
        "signatory_authen": {
          "type": "object",
          "properties": {
            "actual_datetime": { "type": ["string", "null"] },
            "issue_location": { "type": ["string", "object"] },
            "provider_party": {
              "type": "object",
              "properties": {
                "name": { "type": ["string", "null"] },
                "specfied_person_name": { "type": ["string", "null"] }
              }
            },
            "include_clauses": {
              "type": "array"
            }
          }
        }
      },
      "required": ["doc_id", "doc_type", "status_code", "issue_date"]
    },
    "consignment": {
      "type": "object",
      "properties": {
        "export_country_id": { "type": "string" },
        "import_country_id": { "type": "string" },
        "consignor_party": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "adress_line1": { "type": "string" }
          }
        },
        "consignee_party": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "adress_line1": { "type": "string" }
          }
        }
      },
      "required": ["export_country_id", "import_country_id"]
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "sequence_no": { "type": "integer" },
          "scient_name": { "type": ["string", "null"] },
          "intend_uses": {
            "type": "array"
          }
        }
      }
    }
  },
  "required": ["xc_document", "consignment", "items"]
}
