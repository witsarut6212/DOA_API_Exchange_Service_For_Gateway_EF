{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "IPPC e-Phyto Normal Case Schema",
  "type": "object",
  "properties": {
    "xc_document": {
      "type": "object",
      "properties": {
        "doc_name": { "type": ["string"] },
        "doc_type": { "type": ["string", "integer"], "enum": ["851", 851] },
        "doc_id": { "type": ["string", "integer"] },
        "issue_party_name": { "type": ["string"] },
        "status_code": { "type": ["string", "integer"], "enum": ["40", 40, "70", 70] },
        "issue_date": { "type": ["string"] },
        "reference_docs": {
          "type": ["array", "null"],
          "items": {
            "type": "object",
            "properties": {
              "issue_date": { "type": ["string"] },
              "relation_type_code": { "type": ["string"] },
              "doc_id": { "type": ["string", "integer"] },
              "PdfObject": { "type": ["string"] },
              "filename": { "type": ["string"] },
              "informaton": { "type": ["string"] }
            },
            "required": ["relation_type_code", "doc_id", "PdfObject", "filename", "informaton"]
          }
        },
        "signatory_authen": {
          "type": "object",
          "properties": {
            "provider_party": {
              "type": "object",
              "properties": {
                "name": { "type": ["string"] },
                "specfied_person_name": { "type": ["string"] }
              },
              "required": ["name", "specfied_person_name"]
            },
            "issue_location": { "type": ["string", "object"] },
            "include_clauses": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": { "id": { "type": ["string", "integer"] } },
                "required": ["id"]
              }
            }
          },
          "required": ["provider_party", "issue_location", "include_clauses"]
        }
      },
      "required": ["doc_name", "doc_type", "doc_id", "issue_party_name", "status_code", "issue_date", "signatory_authen"]
    },
    "consignment": {
      "type": "object",
      "properties": {
        "export_country": {
          "type": "object",
          "properties": { "id": { "type": ["string"] }, "name": { "type": ["string"] } },
          "required": ["id", "name"]
        },
        "import_country": {
          "type": "object",
          "properties": { "id": { "type": ["string"] }, "name": { "type": ["string"] } },
          "required": ["id", "name"]
        },
        "consignor_party": { "type": "object" },
        "consignee_party": { "type": "object" },
        "unloading_baseport": {
          "type": "object",
          "properties": {
            "name": { "type": ["string"] }
          },
          "required": ["name"]
        },
        "main_carriages": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "properties": {
              "mode_code": { "type": ["string", "integer"] }
            },
            "required": ["mode_code"]
          }
        }
      },
      "required": [
        "export_country",
        "import_country",
        "consignor_party",
        "consignee_party",
        "unloading_baseport",
        "main_carriages"
      ]
    },
    "items": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "descriptions": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "properties": { "name": { "type": ["string"] } },
              "required": ["name"]
            }
          },
          "origin_countries": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "properties": { "id": { "type": ["string"] }, "name": { "type": ["string"] } },
              "required": ["id", "name"]
            }
          },
          "intend_uses": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "properties": { "name": { "type": ["string"] } },
              "required": ["name"]
            }
          }
        },
        "required": ["descriptions", "origin_countries", "intend_uses"]
      }
    },
    "phytoCerts": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "sequenceNo": { "type": ["integer", "string"] },
          "Name": { "type": "string" },
          "documentNo": { "type": "string" },
          "PdfObject": { "type": "string" }
        }
      }
    }
  },
  "required": ["xc_document", "consignment", "items", "phytoCerts"],
  "allOf": [
    {
      "if": {
        "properties": {
          "xc_document": {
            "properties": {
              "status_code": { "enum": ["40", 40] }
            }
          }
        }
      },
      "then": {
        "properties": {
          "phytoCerts": {
            "minItems": 1,
            "items": {
              "required": ["sequenceNo", "Name", "documentNo", "PdfObject"]
            }
          }
        }
      }
    }
  ]
}
