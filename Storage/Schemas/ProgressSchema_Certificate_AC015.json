{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "e-Phyto Progress Certificate Schema (AC015)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "documentControl",
    "details",
    "additionalDocuments"
  ],
  "properties": {
    "documentControl": {
      "type": "object",
      "additionalProperties": false,
      "required": [ "referenceNumber", "documentNumber", "responseInfo" ],
      "properties": {
        "referenceNumber": { "type": "string", "minLength": 1 },
        "documentNumber": { "type": "string", "minLength": 1 },
        "responseInfo": {
          "type": "object",
          "additionalProperties": false,
          "required": [ "dateTime", "status", "code" ],
          "properties": {
            "dateTime": { "type": "string", "format": "date-time" },
            "status": { "type": "string", "enum": [ "ACCEPT" ] },
            "code": { "type": "string", "enum": [ "AC015" ] }
          }
        },
        "messageType": { "type": "string" },
        "remark": { "type": "string" }
      }
    },
    "details": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "ItemNumber": { "type": [ "integer", "null" ] },
          "reasonCode": { "type": "string" },
          "reasonDescription": { "type": "string" }
        }
      }
    },
    "additionalDocuments": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [ "itemNumber", "documentInfo", "attachment" ],
        "properties": {
          "itemNumber": { "type": [ "integer", "null" ] },
          "documentInfo": {
            "type": "object",
            "additionalProperties": false,
            "required": [ "typeCode", "name" ],
            "properties": {
              "typeCode": { "type": "string" },
              "name": { "type": "string" },
              "issueDate": { "type": "string" },
              "expireDate": { "type": "string" }
            }
          },
          "providerAuthority": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "taxNumber": { "type": "string" }
            }
          },
          "attachment": {
            "type": "object",
            "additionalProperties": false,
            "required": [ "filename", "fileType", "fileBase64" ],
            "properties": {
              "filename": { "type": "string" },
              "fileType": { "type": "string" },
              "fileBase64": { "type": "string", "minLength": 1 },
              "remark": { "type": "string" }
            }
          }
        }
      }
    }
  }
}
